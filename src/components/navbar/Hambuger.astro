---
import MobileMenu from './MobileMenu.astro'
---

<button aria-expanded="false" aria-label="toggle menu" id="hamburger-btn">
  <svg
    class="false"
    viewBox="0 0 100 100"
    fill="none"
    stroke="currentColor"
    stroke-width="5"
    width="48"
  >
    <path
      class="top"
      d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20"
    ></path>
    <path class="middle" d="m 30,50 h 40"></path>
    <path
      class="bottom"
      d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20"
    ></path>
  </svg>
</button>

<nav
  class="sm:hidden bg-[#232020]/60 text-white absolute z-10 top-[57px] w-full flex flex-col justify-center items-center
    transition-all duration-300 ease-in-out transform mobile-nav-closed"
  id="mobile-menu"
>
  <MobileMenu />
</nav>

<script>
  const handleNavigation = () => {
    const button = document.getElementById('hamburger-btn')
    const mobileMenu = document.getElementById('mobile-menu')

    function toggleMenu() {
      if (button) {
        if (button.classList.contains('open')) {
          button.classList.remove('open')
        } else {
          button.classList.add('open')
        }
      }

      if (mobileMenu) {
        if (mobileMenu.classList.contains('mobile-nav-open')) {
          mobileMenu.classList.remove('mobile-nav-open')
          mobileMenu.classList.add('mobile-nav-closed')
        } else {
          mobileMenu.classList.remove('mobile-nav-closed')
          mobileMenu.classList.add('mobile-nav-open')
        }
      }
    }

    if (button) {
      button.addEventListener('click', toggleMenu)
    }
  }

  document.addEventListener('astro:page-load', handleNavigation)
</script>

<style>
  :root {
    --transition-duration: 400ms;
  }

  button {
    cursor: pointer;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  svg {
    transition: transform var(--transition-duration);
  }

  .top {
    stroke-dasharray: 40 160;
    transition: stroke-dashoffset var(--transition-duration);
  }

  .middle {
    transform-origin: 50%;
    transition: transform var(--transition-duration);
  }

  .bottom {
    stroke-dasharray: 40 85;
    transition: stroke-dashoffset var(--transition-duration);
  }

  .open {
    transform: rotate(45deg);
  }

  .open .top,
  .open .bottom {
    stroke-dashoffset: -64px;
  }

  .open .middle {
    transform: rotate(90deg);
  }

  .mobile-nav-open {
    visibility: visible;
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-nav-closed {
    visibility: hidden;
    opacity: 0;
    transform: translateY(10px);
  }
</style>
